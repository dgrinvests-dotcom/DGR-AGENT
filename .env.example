# REQUIRED - OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# REQUIRED - Gmail credentials for email communication
GMAIL_ADDRESS=your_gmail@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password

# Database Configuration
DATABASE_URL=sqlite:///./agent_estate.db

# Compliance Settings
QUIET_HOURS_START=21:00
QUIET_HOURS_END=08:00
TIMEZONE=America/New_York

# Application Settings
DEBUG=False
LOG_LEVEL=INFO
MAX_DAILY_CONTACTS=100
FOLLOW_UP_DELAY_HOURS=24

# OPTIONAL - Telnyx SMS Integration
TELNYX_API_KEY=your_telnyx_api_key
TELNYX_MESSAGING_PROFILE_ID=your_messaging_profile_id
TELNYX_PHONE_NUMBER=+1234567890
TELNYX_WEBHOOK_SECRET=your_webhook_secret

# OPTIONAL - Google Calendar Integration
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project",...}
GOOGLE_CALENDAR_ID=primary

# Webhook Configuration (for production)
WEBHOOK_BASE_URL=https://your-domain.com
